{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for GearItem YAML files",

  "type": "object",
  "additionalProperties": false,

  "properties": {
    "name": {
      "type": "string"
    },
    "mindmg": {
      "type": "integer",
      "minimum": 0
    },
    "maxdmg": {
      "type": "integer",
      "minimum": 0
    },
    "speed": {
      "type": "number",
      "minimum": 0
    },
    "armor": {
      "type": "integer"
    },
    "strength": {
      "type": "integer"
    },
    "stamina": {
      "type": "integer"
    },
    "agility": {
      "type": "integer"
    },
    "intellect": {
      "type": "integer"
    },
    "spirit": {
      "type": "integer"
    },
    "ap": {
      "type": "integer"
    },
    "rap": {
      "type": "integer"
    },
    "map": {
      "type": "integer"
    },
    "crit": {
      "type": "integer"
    },
    "rangedcrit": {
      "type": "integer"
    },
    "meleecrit": {
      "type": "integer"
    },
    "hit": {
      "type": "integer"
    },
    "dodge": {
      "type": "integer"
    },
    "haste": {
      "type": "integer"
    },
    "mp5": {
      "type": "integer"
    },
    "defense": {
      "type": "integer"
    },
    "fireresist": {
      "type": "integer"
    },
    "frostresist": {
      "type": "integer"
    },
    "arcaneresist": {
      "type": "integer"
    },
    "natureresist": {
      "type": "integer"
    },
    "shadowresist": {
      "type": "integer"
    },
    "threat": {
      "type": "integer"
    },
    "stealth": {
      "type": "integer"
    },
    "rangedbonusdps": {
      "type": "number"
    },
    "rangedbonusdmg": {
      "type": "integer"
    },
    "type": {
      "type": "string",
      "enum": [ "bow", "crossbow", "dagger", "fist", "gun", "axe", "mace", "sword", "polearm", "staff", "thrown", "two-handed-axe", "two-handed-mace", "two-handed-sword", "wand" ]
    },
    "bow-skill": {
      "type": "integer"
    },
    "crossbow-skill": {
      "type": "integer"
    },
    "dagger-skill": {
      "type": "integer"
    },
    "fist-skill": {
      "type": "integer"
    },
    "gun-skill": {
      "type": "integer"
    },
    "axe-skill": {
      "type": "integer"
    },
    "mace-skill": {
      "type": "integer"
    },
    "sword-skill": {
      "type": "integer"
    },
    "polearm-skill": {
      "type": "integer"
    },
    "staff-skill": {
      "type": "integer"
    },
    "thrown-skill": {
      "type": "integer"
    },
    "two-handed-axe-skill": {
      "type": "integer"
    },
    "two-handed-mace-skill": {
      "type": "integer"
    },
    "two-handed-sword-skill": {
      "type": "integer"
    },
    "wand-skill": {
      "type": "integer"
    },
    "color": {
      "type": "string",
      "enum": [ "red", "yellow", "blue", "orange", "purple", "green" ]
    },
    "unique": {
      "type": "boolean",
      "default": false
    },
    "wowhead": {
      "type": "integer"
    },
    "phase": {
      "type": "integer",
      "enum": [ 1, 2, 3, 4, 5, 6 ]
    },
    "source": {
      "type": "string",
      "enum": [ "dungeon", "gruul", "magtheridon", "karazhan", "badges", "crafting", "rep", "ah", "vendor", "heroic", "worldboss", "zg", "naxx", "honor" ]
    },
    "sockets": {
      "type": "object",
      "properties": {
        "red": {
          "type": "integer"
        },
        "blue": {
          "type": "integer"
        },
        "yellow": {
          "type": "integer"
        },
        "meta": {
          "type": "integer"
        },
        "bonus": {
          "$ref": "#"
        }
      }
    }
  }
}
